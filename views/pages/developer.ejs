<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/developer.css">
<div class="developer-container">
    <header class="border-b-dev border-gray-200">
        <div class="max-w-8xl mx-auto flex justify-between items-center py-4 px-6">
            <div class="text-lg font-bold text-gray-800">TAURUS</div>
            <nav class="space-x-6">
                <a href="#" class="text-gray-700 font-semibold text-sm hover:text-purple-600">Protect & Capital</a>
                <a href="#" class="text-gray-700 font-semibold text-sm hover:text-purple-600">Explorer</a>
                <a href="#" class="text-gray-700 font-semibold text-sm hover:text-purple-600">TDX</a>
                <a href="#" class="text-gray-700 font-semibold text-sm hover:text-purple-600">User & Technical guide</a>
            </nav>
        </div>
    </header>

    <header class="border-b border-gray-200">
        <div class="max-w-8xl mx-auto flex justify-between items-center py-1 px-3">
            <!-- Left: Dropdown Input -->
            <div class="relative">
                <select class="border-transparent rounded-md py-1 px-4 text-gray-700 hover:border-gray-300 focus:border-gray-300 focus:outline-none">
                    <option value="" disabled selected>Developer Hub</option>
                    <option value="option1">Taurus Capital</option>
                    <option value="option2">Taurus TDX</option>
                    <option value="option3">Taurus EXPLORER</option>
                </select>
            </div>
            
            <!-- Right: Search Input -->
            <div class="relative dev-search">
                <input type="text" placeholder="Search   CTRL+K"
                    class="border border-gray-300 rounded-md py-2 px-4 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500">
            </div>
        </div>
    </header>


    <main class="max-w-7xl flex justify-start mt-10 px-8">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
            <!-- Taurus Explorer -->
            <div class="border developer-box border-gray-300 rounded-lg shadow-sm p-6 flex flex-col">
                <div class="developer-item flex items-center mb-2">
                    <i class=" ri-cloud-line icon-circle mr-1"></i>
                    <div>
                        <div class="text-sm font-semibold text-gray-800">Taurus</div>
                        <div class="text-2xl font-semibold text-gray-800">EXPLORER</div>
                    </div>
                </div>
                <div class="developer-center flex justify-center">
                    <p class="text-sm developer-1 text-gray-600">Taurus EXPLORER</p>
                </div>
            </div>
            <!-- Taurus Protect -->
            <div class="border developer-box border-gray-300 rounded-lg shadow-sm p-6 flex flex-col">
                <div class="developer-item flex items-center mb-2">
                    <i class=" ri-shield-check-line icon-circle mr-1"></i>
                    <div>
                        <div class="text-sm font-semibold text-gray-800">Taurus</div>
                        <div class="text-2xl font-semibold text-gray-800">PROTECT</div>
                    </div>
                </div>
                <div class="developer-center flex justify-center">
                    <p class="text-sm developer-1 text-gray-600">Taurus PROTECT</p>
                </div>
            </div>

            <!-- Taurus T-DX -->
            <div class="border developer-box border-gray-300 rounded-lg shadow-sm p-6 flex flex-col">
                <div class="developer-item flex items-center mb-2">
                    <i class="ri-arrow-left-right-fill icon-circle mr-1"></i>
                    <div>
                        <div class="text-sm font-semibold text-gray-800">Taurus</div>
                        <div class="text-2xl font-semibold text-gray-800">T-DX</div>
                    </div>
                </div>
                <div class="developer-center flex justify-center">
                    <p class="text-sm developer-1 text-gray-600">Taurus T-DX</p>
                </div>
            </div>

            <!-- Taurus Guides -->
            <div class="border developer-box border-gray-300 rounded-lg shadow-sm p-6 flex flex-col">
                <div class="developer-item flex items-center mb-2">
                    <i class="ri-git-repository-private-line icon-circle mr-1"></i>
                    <div>
                        <div class="text-sm font-semibold text-gray-800">Taurus</div>
                        <div class="text-2xl font-semibold text-gray-800">GUIDES</div>
                    </div>
                </div>
                <div class="developer-center flex justify-center">
                    <p class="text-sm developer-1 text-gray-600">User & Technical Guides</p>
                </div>
            </div>


        </div>
    </main>
</div>