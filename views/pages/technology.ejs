<%- layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/technology.css">
    <link rel="stylesheet" href="/stylesheets/nft.css">
    <link rel="stylesheet" href="/stylesheets/cloud.css">
    <div class="digital-hero">
        <div class="digital-texts">
            <div class=" title-1 font-bold flex flex-col justify-center gap-7">
                <div class="image-digi flex gap-3"> <img src="/images/stack.png" class="h-12"
                        alt=""><span>Technologies we use</span></div>
                <div class="white-r"></div>
            </div>
        </div>
    </div>

    <div class="acordion">
        <div class="forensic-dropper">
            <div class=" dropper-container zero-pad">
                <div class="bg-gray-100 p-8 rounded-lg shadow-md we-use hr">
                    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4">
                        <a href="#" class="mini-card bg-gray-200 p-4 rounded-lg shadow-sm text-center flex justify-center items-center flex-col"
                            data-target="data-content">
                            <img src="/images/fontend.png" alt="" class="h-8">
                            <p class="text-gray-900 mt-2">Front-end</p>
                        </a>
                        
                        <a href="#" class="flex justify-center items-center flex-col mini-card bg-gray-200 p-4 rounded-lg shadow-sm text-center"
                            data-target="database-content">
                            <img src="/images/backend-coding.png" class="h-8" alt="">
                            <p class="text-gray-900 mt-2">Back-end</p>
                        </a>

                        <a href="#" class="flex justify-center items-center flex-col mini-card bg-gray-200 p-4 rounded-lg shadow-sm text-center"
                            data-target="app-content">
                            <img src="/images/booking.png" alt="" class="h-8">
                            <p class="text-gray-900 mt-2">Mobile</p>
                        </a>

                        <a href="#" class="flex justify-center items-center flex-col mini-card bg-gray-200 p-4 rounded-lg shadow-sm text-center"
                            data-target="server-content">
                            <img src="/images/serve.png" alt="" class="h-8">
                            <p class="text-gray-900 mt-2">Cloud</p>
                        </a>

                        <a href="#" class="flex justify-center items-center flex-col mini-card bg-gray-200 p-4 rounded-lg shadow-sm text-center"
                            data-target="security-content">
                            <img src="/images/erp.png" alt="" class="h-8">
                            <p class="text-gray-900 mt-2">ERP & CRM</p>
                        </a>

                        <a href="#" class="flex justify-center items-center flex-col mini-card bg-gray-200 p-4 rounded-lg shadow-sm text-center"
                            data-target="modernization-content">
                            <img src="/images/cyber-security.png" alt="" class="h-8">
                            <p class="text-gray-900 mt-2">Cybersecurity</p>
                        </a>
                    </div>
                    <!-- Divider -->
                    <div class="lambda"></div>


                    <!-- Content Section -->
                    <div class="flex flex-col md:flex-row justify-between items-start h-auto lg:ml-20">
                        <!-- Left Side: Text Content -->
                        <div style="padding-left: 50px; padding-right: 30px; border-right: 2px dashed #1a1a1a;"
                            class="cloud-hider w-full md:w-1/3 pr-4 mb-6 md:mb-0">
                            <h3 class="text-xl font-bold mb-4" id="content-title">Cybersecurity</h3>
                            <p class="text-gray-700 mb-4 leading-relaxed" id="content-text">Protect your business with our comprehensive cybersecurity solutions. <br> We offer services including threat detection, vulnerability management, and incident response to safeguard your digital assets.
                            </p>
                        </div>

                        <!-- Horizontal Divider for Mobile -->
                        <div class="cloud-hider border-b-2 border-dashed border-gray-800 w-full mb-4 md:hidden"></div>

                        <!-- Vertical Divider for Desktop -->
                        <div class="hidden md:block border-l-2 border-dashed border-gray-800 self-stretch mx-4"></div>

                        <!-- Right Side: AWS Services -->
                        <div class="flex flex-wrap w-full md:w-2/3 gap-2" id="right-side-content">
                            <p class="border border-1 bg-gray-200 rounded-lg p-2 w-full text-center">AWS Lambda</p>
                            <p class="border border-1 bg-gray-200 rounded-lg p-2 w-full text-center">Azure Functions</p>
                            <p class="border border-1 bg-gray-200 rounded-lg p-2 w-full text-center">Kubernetes</p>
                            <p class="border border-1 bg-gray-200 rounded-lg p-2 w-full text-center">Docker</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/javascripts/technology.js"></script>