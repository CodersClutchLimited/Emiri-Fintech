    <div id="book" class="heart-container merge-me panda-2 mx-auto p-4 pb-8">
        <p class="faq-text pb-8 text-4xl font-semibold text-center"> <span
                class="related-underline underline">Related</span> capabilities
        </p>
        <!-- Grid container -->
        <div class="heart-gridder">
            <div class=" heart-grid grid grid-cols-1 lg:grid-cols-2 gap-4">
