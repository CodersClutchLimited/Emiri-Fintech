<%- layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/ai.css">
    <link rel="stylesheet" href="/stylesheets/book.css">

    <div class="digital-hero">
        <div class="digital-texts">
            <div class=" title-1 font-bold text-5xl flex flex-col justify-center items-center gap-7"><span><i class="ri-chat-ai-line"></i> Let's hear from you!</span>
                <div class="white-r"></div>
            </div>
        </div>
    </div>

    <div class="acordion">
        <div class="forensic-dropper">
            <div class=" dropper-container zero-AI zero-pad">
                <!-- contact-us -->
    <div class="w-full h-full flex flex-col lg:flex-row mb-8">
        <!-- Left Section  -->
        <div class="w-full lg:w-1/2 p-8 flex flex-col justify-center">
            <h2 class="pluto-1 text-center font-medium text-3xl md:text-4xl mb-8">Contact us!</h2>
            <p class="text-xl text-center text-gray-800 mb-6"><span class="text-red-700 underline"><a href="#">Book a
                        call</a></span> or fill out the form below and we’ll get back to you once we’ve processed
                your request.</p>

            <form class="w-full">
                <!-- Name Field -->
                <div class="relative z-0 w-full mb-5 group">
                    <input type="text" name="floating_name" id="floating_name"
                        class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                        placeholder=" " required />
                    <label for="floating_name"
                        class="peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:text-blue-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Name</label>
                </div>

                <!-- Company Field -->
                <div class="relative z-0 w-full mb-5 group">
                    <input type="text" name="floating_company" id="floating_company"
                        class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                        placeholder=" " required />
                    <label for="floating_company"
                        class="peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:text-blue-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Company</label>
                </div>

                <!-- Confirm Email Field -->
                <div class="relative z-0 w-full mb-5 group">
                    <input type="text" name="repeat_corporate" id="floating_repeat_corporate"
                        class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                        placeholder=" " required />
                    <label for="floating_repeat_corporate"
                        class="peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:text-blue-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Confirm
                        Corporate Email</label>
                </div>

                <!-- Phone and Subject Fields -->
                <div class="grid md:grid-cols-2 md:gap-6">
                    <div class="relative z-0 w-full mb-5 group">
                        <input type="number" name="floating_first_phone" id="floating_first_phone"
                            class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                            placeholder=" " required />
                        <label for="floating_first_phone"
                            class="peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:text-blue-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">First
                            Phone</label>
                    </div>
                    <div class="relative z-0 w-full mb-5 group">
                        <input type="text" name="floating_last_subject" id="floating_last_subject"
                            class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                            placeholder=" " required />
                        <label for="floating_last_subject"
                            class="peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:text-blue-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Last
                            Subject</label>
                    </div>
                </div>

                <!-- Project Budget Field -->
                <div class="relative z-0 w-full mb-5 group">
                    <select name="floating_project" id="floating_project"
                        class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer" required>
                        <option value="" disabled selected>Project Budget</option>
                        <option value="100-200">$100-200K</option>
                        <option value="200-300">$200-300K</option>
                        <option value="300-400">$300-400K</option>
                        <option value="400-500">$400-500K</option>
                        <option value="500-600">$500-600K</option>
                        <option value="600-700">$600-700K</option>
                        <option value="700-800">$700-800K</option>
                        <option value="800-900">$800-900K</option>
                        <option value="900-1000">$900K-1M</option>
                    </select>
                    <label for="floating_project"
                        class="peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:text-blue-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Project
                        Budget</label>
                </div>

                <!-- Description Field -->
                <div class="relative z-0 w-full mb-5 group">
                    <input type="text" name="floating_description" id="floating_description"
                        class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                        placeholder=" " required />
                    <label for="floating_description"
                        class="peer-focus:font-medium absolute text-sm text-gray-500 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:text-blue-600 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Description</label>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col justify-center items-center">
                    <div class="flex flex-col lg:flex-row gap-4 w-full">
                        <!-- Record Message Button -->
                        <div class="book-padder flex flex-col items-center border border-gray-300 rounded-md p-4 w-full lg:w-1/2">
                            <p class="text-sm font-medium mb-2">Record a voice message about your project to help us
                                understand it better</p>
                            <button
                                class="border border-red-500 hover:bg-gray-100 text-red-500 font-bold py-2 px-4 rounded flex items-center justify-center gap-2">
                                <i class="ri-mic-2-line text-xl"></i>
                                Record a voice message
                            </button>
                        </div>

                        <!-- Attach Documents Button -->
                        <div class="book-padder flex flex-col items-center border border-gray-300 rounded-md p-4 w-full lg:w-1/2">
                            <p class="text-sm font-medium mb-2">Attach additional documents as needed</p>
                            <button
                                class="attacher border lg:mt-3 border-red-500 hover:bg-gray-100 text-red-500 font-bold py-2 px-4 rounded flex items-center justify-center gap-2">
                                <i class="ri-file-2-line text-xl"></i>
                                Attach additional documents
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Legal Notice -->
                <p class="book-padder text-sm text-gray-500 mt-7">Please be informed that when you click the Send button, we
                    will process your personal data in accordance with our <span class="text-black font-medium"> <a
                            href="#">Privacy Policy</a> </span>and Terms and Conditions.</p>

                <!-- Full-Width Send Button -->
                <button type="submit"
                    class="book-padder mt-7 w-full bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded">
                    Send
                </button>
            </form>

        </div>

            </div>

        </div>
    </div>
