                <p><span><i class="ri-briefcase-3-line"></i></span> Employee</p>
                <p><span><i class="ri-folder-line"></i></span> Legal Department</p>
              </div>
            </div>
            <div class="arrow">
                <a class="arrow-icon" href="#"><i class="ri-arrow-right-s-line"></i></a>
            </div>
          </div>

        <!-- Single Job Item -->
        <div class="job-item bg-white rounded-lg mb-4 flex items-center shadow-md" data-category="Other" data-location="Geneva, Switzerland">
            <!-- Icon Image -->
            <img src="/images/emiri.png" alt="Job Icon" class="job-icon">
          
            <!-- Job Details -->
            <div class="flex-1">
              <!-- Job Title -->
              <h3 class="text-lg font-medium career-role mb-2">Senior Platform Engineer / Senior Devops Engineer [Geneva / Zurich / Lausanne]</h3>
