<%- layout('layouts/boilerplate') %>
<div class="career-container max-h-screen">
    <div class="career-title text-center">
        <p class="text-normal text-5xl">Careers</p>
    </div>

    <!-- Outer Container -->
    <div class="careers p-6">
      <!-- Inner Container with Two Columns -->
      <div class="grid grid-cols-2 gap-4">
        <!-- First Column -->
        <div class="w-full mt-4">
          <select id="dropdown1" class="w-full p-2 border border-gray-300 rounded-md">
            <option value="">All Categories</option>
            <option value="Software Development">Software Development</option>
            <option value="Legal Department">Legal Department</option>
            <option value="System and Network Administration">System and Network Administration</option>
            <option value="Engineering">Engineering</option>
            <option value="Other">Other</option>
          </select>
        </div>
        <!-- Second Column -->
        <div class="w-full mt-4">
          <select id="dropdown2" class="w-full p-2 border border-gray-300 rounded-md">
            <option value="">All locations</option>
            <option value="Geneva, Switzerland">Geneva, Switzerland</option>
            <option value="Lausanne, Switzerland">Lausanne, Switzerland</option>
            <option value="Vancouver, Canada">Vancouver, Canada</option>
          </select>
        </div>
      </div>
  
      <!-- Job List -->
      <div class="mt-8">
        <!-- Single Job Item -->
        <div class="job-item bg-white rounded-lg mb-4 flex items-center shadow-md">
            <!-- Icon Image -->
            <img src="/images/emiri.png" alt="Job Icon" class="job-icon">
          
            <!-- Job Details -->
            <div class="flex-1">
              <!-- Job Title -->
              <h3 class="text-lg font-medium career-role mb-2">Head of Trading Sales & Distribution [Geneva / Lausanne / Zurich]</h3>
              <!-- Job Info Row -->
              <div class="flex space-x-4 text-lg font-normal career-detail">
                <p><span><i class="ri-map-pin-2-fill"></i></span> Geneva, Switzerland</p>
                <p><span><i class="ri-briefcase-3-line"></i></span> Employee</p>
                <p><span><i class="ri-folder-line"></i></span> Other</p>
              </div>
            </div>
            <div class="arrow">
                <a class="arrow-icon" href="#"><i class="ri-arrow-right-s-line"></i></a>
            </div>
          </div>
          
        <!-- Single Job Item -->
        <div class="job-item bg-white rounded-lg mb-4 flex items-center shadow-md">
            <!-- Icon Image -->
            <img src="/images/emiri.png" alt="Job Icon" class="job-icon">
          
            <!-- Job Details -->
            <div class="flex-1">
              <!-- Job Title -->
              <h3 class="text-lg font-medium career-role mb-2">Legal Officer [Switzerland / Paris / London]</h3>
              <!-- Job Info Row -->
              <div class="flex space-x-4 text-lg font-normal career-detail">
