          </div>

          <div class="job-item bg-white rounded-lg mb-4 flex items-center shadow-md"  data-category="Software Development" data-location="Lausanne, Switzerland">
            <!-- Icon Image -->
            <img src="/images/emiri.png" alt="Job Icon" class="job-icon">
          
            <!-- Job Details -->
            <div class="flex-1">
              <!-- Job Title -->
              <h3 class="text-lg font-medium career-role mb-2">Senior Site Reliability Engineer [Vancouver]</h3>
